{
  "manifest_version": 2,
  "name": "BestiaryArena SuperMod Loader",
  "version": "2.6.0",
  "description": "SuperMod loader for Bestiary Arena - Advanced mod management system with enhanced features, custom mods, and comprehensive tools for the Bestiary Arena game.",
  "icons": {
    "16": "assets/icons/icon-16.png",
    "32": "assets/icons/icon-32.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon-16.png",
      "32": "assets/icons/icon-32.png",
      "48": "assets/icons/icon-48.png",
      "128": "assets/icons/icon-128.png"
    }
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.bestiaryarena.com/*", 
        "*://bestiaryarena.com/*"
      ],
      "exclude_matches": [
        "*://bestiaryarena.com/profile/*",
        "*://bestiaryarena.com/recolor*"
      ],
      "js": ["content/injector.js"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": [
        "*://*.bestiaryarena.com/*", 
        "*://bestiaryarena.com/*"
      ],
      "exclude_matches": [
        "*://bestiaryarena.com/profile/*",
        "*://bestiaryarena.com/recolor*"
      ],
      "js": ["content/utility_injector.js"],
      "run_at": "document_idle",
      "all_frames": true
    },
    {
      "matches": [
        "*://*.bestiaryarena.com/*", 
        "*://bestiaryarena.com/*"
      ],
      "exclude_matches": [
        "*://bestiaryarena.com/profile/*",
        "*://bestiaryarena.com/recolor*"
      ],
      "js": ["content/dashboard_bridge.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "permissions": [
    "storage",
    "tabs",
    "*://*.bestiaryarena.com/*",
    "*://bestiaryarena.com/*",
    "https://*.bestiaryarena.com/*",
    "https://bestiaryarena.com/*",
    "http://*.bestiaryarena.com/*",
    "http://bestiaryarena.com/*",
    "*://*.gist.githubusercontent.com/*",
    "*://gist.githubusercontent.com/*",
    "*://*.raw.githubusercontent.com/*",
    "*://raw.githubusercontent.com/*"
  ],
  "web_accessible_resources": [
    "content/client.js", 
    "content/local_mods.js", 
    "content/mod-registry.js",
    "content/modsLoader.js",
    "content/utility_injector.js",
    "content/ba-sandbox-utils.mjs",
    "assets/icons/*", 
    "assets/js/*",
    "assets/fonts/*",
    "assets/locales/*", 
    "mods/*",
    "database/*"
  ],
  "options_ui": {
    "page": "dashboard/dashboard.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "bestiaryarena-supermodloader@private.local",
      "strict_min_version": "78.0"
    }
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'; connect-src 'self' https://*.gist.githubusercontent.com https://gist.githubusercontent.com"
} 