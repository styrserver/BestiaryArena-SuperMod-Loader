{
  "manifest_version": 3,
  "name": "BestiaryArena SuperMod Loader",
  "version": "3.2.12",
  "description": "SuperMod loader for Bestiary Arena - Advanced mod management system with enhanced features and custom mods.",
  "icons": {
    "16": "assets/icons/icon-16.png",
    "32": "assets/icons/icon-32.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon-16.png",
      "32": "assets/icons/icon-32.png",
      "48": "assets/icons/icon-48.png",
      "128": "assets/icons/icon-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.bestiaryarena.com/*", "*://bestiaryarena.com/*"],
      "exclude_matches": [
        "*://bestiaryarena.com/profile/*",
        "*://bestiaryarena.com/recolor*",
        "*://bestiaryarena.com/assets*",
        "*://bestiaryarena.com/_next/*"
      ],
      "js": ["content/injector.js"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["*://*.bestiaryarena.com/*", "*://bestiaryarena.com/*"],
      "exclude_matches": [
        "*://bestiaryarena.com/profile/*",
        "*://bestiaryarena.com/recolor*",
        "*://bestiaryarena.com/assets*",
        "*://bestiaryarena.com/_next/*"
      ],
      "js": ["content/utility_injector.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "permissions": ["storage", "unlimitedStorage", "scripting", "tabs", "activeTab"],
  "host_permissions": [
    "*://*.gist.githubusercontent.com/*",
    "*://gist.githubusercontent.com/*",
    "*://*.raw.githubusercontent.com/*",
    "*://raw.githubusercontent.com/*",
    "*://*.bestiaryarena.com/*",
    "*://bestiaryarena.com/*",
    "*://*.firebasedatabase.app/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "content/client.js",
        "content/local_mods.js",
        "content/mod-registry.js",
        "content/mod-coordination.mjs",
        "content/utility_injector.js",
        "content/ba-sandbox-utils.mjs",
        "content/custom-battles.js",
        "assets/icons/*",
        "assets/js/*",
        "assets/fonts/*",
        "assets/locales/*",
        "assets/equipment/*",
        "assets/guild/*",
        "assets/quests/*",
        "assets/skills/*",
        "mods/*",
        "database/*"
      ],
      "matches": ["*://*.bestiaryarena.com/*", "*://bestiaryarena.com/*"]
    }
  ]
} 